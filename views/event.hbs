    <div class="pagination pagination-centered center-align">
        <ul>
            {{#paginate pagination type="first"}}
            <li {{#if disabled}}class="disabled" {{/if}}>
                <a href="{{n}}">First</a>
            </li>
            {{/paginate}} {{#paginate pagination type="previous"}}
